{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CognitoLocal",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      //"runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
      "args": ["nodemon"],
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "outputCapture": "std",
      "env": {
        "COGNITO_LOCAL_DEVMODE": "1",
        "DEBUG": "1"
      }
    }
  ]
}
